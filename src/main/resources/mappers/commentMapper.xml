<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="comment">
    <!-- comment 리스트 구하기 -->
    <select id="commentList" resultType="kr.co.teaspoon.dto.Comment">
        <![CDATA[
        select * from comment where cno=#{cno} ORDER BY resdate DESC LIMIT #{postStart}, #{postCount}
        ]]>
    </select>

    <!-- comment의 전체 개수 구하기 -->
    <select id="getCount" resultType="integer">
        select count(*) from comment where cno = #{cno}
    </select>

    <!-- comment INSERT -->
    <insert id="commentInsert">
        insert into comment
        values(default, #{cno}, #{author}, default, #{content})
    </insert>

    <!-- comment DELETE -->
    <delete id="commentDelete">
        delete from comment
        where comNo=#{comNo}
    </delete>
</mapper>